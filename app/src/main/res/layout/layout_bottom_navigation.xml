<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/double_giant_80"
    android:background="@color/yellow"
    android:orientation="vertical">

    <View style="@style/Aw.Component.Separator"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/nav_portfolio_text"
            style="@style/Aw.Typography.TitleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/Portfolio_label"
            android:layout_marginVertical="10px"
            android:textColor="@color/selector_bottom_navigation"
            app:drawableTint="@color/selector_bottom_navigation"
            app:drawableTopCompat="@drawable/ic_safe" />

        <TextView
            android:id="@+id/nav_earn_text"
            style="@style/Aw.Typography.TitleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/earn_label"
            android:textColor="@color/selector_bottom_navigation"
            app:drawableTint="@color/selector_bottom_navigation"
            app:drawableTopCompat="@drawable/ic_btc" />

        <TextView
            android:id="@+id/nav_activity_text"
            style="@style/Aw.Typography.TitleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/activity_label"
            android:textColor="@color/selector_bottom_navigation"
            app:drawableTint="@color/selector_bottom_navigation"
            app:drawableTopCompat="@drawable/ic_activity" />

        <TextView
            android:id="@+id/nav_browser_text"
            style="@style/Aw.Typography.TitleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/buy_label"
            android:textColor="@color/selector_bottom_navigation"
            app:drawableTint="@color/selector_bottom_navigation"
            app:drawableTopCompat="@drawable/ic_pay_card" />

        <RelativeLayout
            android:id="@+id/settings_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="10px"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nav_settings_text"
                style="@style/Aw.Typography.TitleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_label"
                android:textColor="@color/selector_bottom_navigation"
                app:drawableTint="@color/selector_bottom_navigation"
                app:drawableTopCompat="@drawable/ic_settings" />

            <TextView
                android:id="@+id/settings_badge"
                style="@style/Aw.Typography.NotificationBadge"
                android:layout_width="@dimen/notification_badge_small"
                android:layout_height="@dimen/notification_badge_small"
                android:layout_alignStart="@id/nav_settings_text"
                android:layout_alignTop="@id/nav_settings_text"
                android:paddingBottom="1dp"
                android:visibility="gone"
                tools:text="1"
                tools:visibility="visible" />
        </RelativeLayout>

        <TextView
            android:id="@+id/nav_wallet_text"
            style="@style/Aw.Typography.TitleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/wallet_label"
            android:textColor="@color/selector_bottom_navigation"
            app:drawableTint="@color/selector_bottom_navigation"
            app:drawableTopCompat="@drawable/ic_wallet" />

    </LinearLayout>

</LinearLayout>